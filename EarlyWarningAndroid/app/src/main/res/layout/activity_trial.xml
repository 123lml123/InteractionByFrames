<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="cc.bitky.warningsystem.trial.TrialActivity">

  <cc.bitky.warningsystem.utils.KyToolBar
    android:id="@+id/trialActivity_kyToolbar"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/colorPrimary"
    app:enableKyNavigationIcon="true"
    app:title="当前活跃节点" />

  <android.support.v7.widget.RecyclerView
    android:id="@+id/trialActivity_recyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

</LinearLayout>
